@{
    int countShop = Nop.Core.Infrastructure.EngineContext.Current.Resolve<Nop.Core.IWorkContext>().CurrentCustomer.ShoppingCartItems.Where(x => x.ShoppingCartType == Nop.Core.Domain.Orders.ShoppingCartType.ShoppingCart).Sum(x => x.Quantity);
}

<div class="header">

    <div class="top-menu">
        <div class="left">
            <ul>
                <li ><a class="fa-home" href="@Url.RouteUrl("HomePage")">@T("Home") </a></li>
                <li><a class="fa-envelope" href="@Url.RouteUrl("ContactUs")">@T("ContactUs")</a></li>
                 <li><a class="fa-sitemap" href="@Url.RouteUrl("Sitemap")">@T("Sitemap")</a></li>
            </ul>
            
        </div>

        <div class="right"> 
                       <div class="currency-selector">
                @Html.Action("CurrencySelector", "Common")
            </div>
            <div class="language-selector">
                @Html.Action("LanguageSelector", "Common")
            </div>
            @Html.Action("HeaderLinks", "Common")

        </div>


    </div>
    @Html.Widget("header")
    <div class="header-logo">
        <a href="@Url.RouteUrl("HomePage")" class="logo">&nbsp; </a>
    </div>



    <div class="info">
        <div class="telephone"><i class="fa fa-phone"></i> @T("Telephone")</div>
        <div class="hours">@T("OpenHours")</div>
    </div>




    <div class="search-box">
        @Html.Action("SearchBox", "Catalog")
    </div>

            <div class="basket">
                  <div id="topcartlink">
                       
                            <span class="cart-label">@T("ShoppingCart")</span>
                           <span class="cart-qty">@T("ShoppingCart.HeaderQuantity",  countShop)</span>
                        
                   
         </div>  @Html.Action("FlyoutShoppingCart", "ShoppingCart")  
            </div> 
          


        <script type="text/javascript">
            $(document).ready(function () {
                $('.header').on('click', '#topcartlink', function () {
                    $('#flyout-cart').toggle().addClass('active');
                });
                //$('.header').on('mouseleave', '#topcartlink', function () {
                //    $('#flyout-cart').removeClass('active');
                //});
                //$('.header').on('click', '#flyout-cart', function () {
                //    $('#flyout-cart').addClass('active');
                //});
                $('.header').on('click', '#flyout-cart', function () {
                    $('#flyout-cart').removeClass('active');
                });
            });
       </script>
   


</div>
